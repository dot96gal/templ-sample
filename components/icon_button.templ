package components

css iconButtonButtonStyle() {
	display: block;
	width: 24px;
	height: 24px;
}

type IconButtonProps struct {
	Icon       templ.Component
	Attributes templ.Attributes
}

// [TODO] ボタン押下時のアクションを追加する
templ IconButton(props IconButtonProps) {
	<button
		class={ iconButtonButtonStyle() }
		{ props.Attributes... }
	>
		@props.Icon
	</button>
}
