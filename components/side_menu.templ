package components

css sideMenuMenuStyle() {
	margin: 0px;
	padding: 16px;
}

css sideMenuULStyle() {
	display: grid;
	gap: 16px;
	aligh-content: start;
	margin: 0px;
	padding: 0px;
	list-style: none;
}

type SideMenuProps struct {
	Items []templ.Component
}

templ SideMenu(props SideMenuProps) {
	<menu class={ sideMenuMenuStyle() } data-testid="side-menu-component">
		<ul class={ sideMenuULStyle() }>
			for _, item := range props.Items {
				<li>
					@item
				</li>
			}
		</ul>
	</menu>
}
